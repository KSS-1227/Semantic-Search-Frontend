{
  "build": {
    "command": "npm ci && npm run build",
    "output": "dist",
    "environment": {
      "NODE_VERSION": "18.x"
    }
  },
  "headers": {
    "/**/*.js": {
      "Content-Type": "application/javascript"
    },
    "/**/*.tsx": {
      "Content-Type": "application/javascript"
    },
    "/assets/**": {
      "Cache-Control": "public, max-age=31536000, immutable"
    }
  },
  "redirects": [
    {
      "source": "/**",
      "destination": "/index.html",
      "type": "rewrite"
    }
  ]
}